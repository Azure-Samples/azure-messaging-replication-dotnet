{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Specifies the Azure location for all resources."
      }
    },
    "eventHubSku": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [ "Basic", "Standard" ],
      "metadata": {
        "description": "Specifies the messaging tier for Event Hub Namespace."
      }
    },
    "functionsAppName": {
      "type": "string",
      "defaultValue": "fnapp",
      "metadata": {
        "description": "The name of the function app"
      }
    }
  },
  "variables": {
    "leftEventHub": "telemetry",
    "rightEventHub": "telemetry",
    "leftNamespaceName": "eventhubcopy-left",
    "rightNamespaceName": "eventhubcopy-right"
  },
  "resources": [
    {
      "type": "Microsoft.EventHub/namespaces",
      "apiVersion": "2018-01-01-preview",
      "name": "[variables('leftNamespaceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('eventHubSku')]",
        "tier": "[parameters('eventHubSku')]",
        "capacity": 4
      },
      "properties": {
        "isAutoInflateEnabled": false,
        "maximumThroughputUnits": 0
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces/eventhubs",
      "apiVersion": "2017-04-01",
      "name": "[concat(variables('leftNamespaceName'), '/', variables('leftEventHub'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.EventHub/namespaces', variables('leftNamespaceName'))]"
      ],
      "properties": {
        "messageRetentionInDays": 1,
        "partitionCount": 4
      },
      "resources": [
        {
          "type": "consumergroups",
          "apiVersion": "2017-04-01",
          "name": "[concat(parameters('functionsAppName'), '.', variables('leftEventHub'))]",
          "dependsOn": [
            "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('leftNamespaceName'), variables('leftEventHub'))]"
          ],
          "properties": {}
        }
      ]
    },

    {
      "type": "Microsoft.EventHub/namespaces",
      "apiVersion": "2018-01-01-preview",
      "name": "[variables('rightNamespaceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('eventHubSku')]",
        "tier": "[parameters('eventHubSku')]",
        "capacity": 4
      },
      "properties": {
        "isAutoInflateEnabled": false,
        "maximumThroughputUnits": 0
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces/eventhubs",
      "apiVersion": "2017-04-01",
      "name": "[concat(variables('rightNamespaceName'), '/', variables('rightEventHub'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.EventHub/namespaces', variables('rightNamespaceName'))]"
      ],
      "properties": {
        "messageRetentionInDays": 1,
        "partitionCount": 4
      },
      "resources": [
        {
          "type": "consumergroups",
          "apiVersion": "2017-04-01",
          "name": "[concat(parameters('functionsAppName'), '.', variables('rightEventHub'))]",
          "dependsOn": [
            "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('rightNamespaceName'), variables('rightEventHub'))]"
          ],
          "properties": {}
        }
      ]
    }
  ]
}
